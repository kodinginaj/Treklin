<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/card_petugas"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="4dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/btn_komplain"
            android:background="@drawable/ic_mark2"
            />

        <Button
            android:id="@+id/btn_komplain"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:text="Komlpain" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:id="@+id/etNama"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/etJarak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jarak"
            android:textSize="20sp"
            android:layout_below="@id/etNama"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/etPeralatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peralatan"
            android:textSize="20sp"
            android:layout_below="@id/etJarak"

            android:textColor="#000000"/>

    </RelativeLayout>

</LinearLayout>