<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.gallery.GalleryFragment" >

        <TextView
            android:id="@+id/text_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Arikel"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/text_penulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penulis Artikel"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            />

        <ImageView
            android:id="@+id/img_article"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/artikelexample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jdkjbcsdbc dicsdhbcsdh csdcbjsdhcbjsdh dhsbhjsbd asbdhjasbdhjadbashdbahsdbabdjahsbdsahdbahjsbdsbdajhsbd"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#ddd"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artikel Lainnya"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:paddingRight="15dp"
                android:textSize="25dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvArticleLain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:layout_marginTop="10dp">


            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>



    </LinearLayout>
</ScrollView>
